extends ../layout

block content
    .box
        a(href="/").p-r.link &raquo; Home
        if auth && god
            a(href="/edit/#{row.pid}").p-r.link &raquo; Edit
            form(action="/delete/#{row.pid}" method="post").inline
                button(type="submit").link.inline.no-pad-left &raquo; Delete
        .post-body
            p!= row.body_markdown
    script.
        var elems = document.getElementsByTagName("p");
        for(var i=0;i<elems.length;i++) {
            if (elems[i].childElementCount >= 1 && elems[i].children[0].nodeName === "IMG") {
                elems[i].style.textAlign = "center";
            }
        }

        hljs.initHighlightingOnLoad();