extends layout

block content
    //- include ./includes/header.jade
    .blogs.box
        h4.center-header
        //- Enter a search bar here instead
        h3 Recent Posts
            ul
                //- consider a two column table of blog posts too?
                each r, i in rows
                    case r.topic
                        when "azure"
                            p.tag.azure
                        when "chrome"
                            p.tag.chrome
                        when "dotnet"
                            p.tag.dotnet
                        when "nodejs"
                            p.tag.nodejs
                        when "javascript"
                            p.tag.javascript
                        default
                            p.tag.default
                    li
                        a(href="/posts/#{r.friendly_url}")
                            span #{r.title}
                        p.preview #{r.body_preview}
                            span(id="date-#{i}").text-muted.fill-right
                    script.
                        var date = "#{r.date_time}";
                        date = date.split(" ");
                        date = date[1] + " " + date[2] + " " + date[3];
                        document.getElementById("date-#{i}").textContent = date;

