doctype html
html
  head
    if title
      title= title
    else
      title Blog Posts by James Earle
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/posts.css')
    link(rel='stylesheet', href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.11.0/styles/darcula.min.css")
    script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.11.0/highlight.min.js")
    script(async src="https://platform.twitter.com/widgets.js" charset="utf-8")
    include ./includes/app_insights.html
  body
    //- Add other nav, "About", "Work", etc.
