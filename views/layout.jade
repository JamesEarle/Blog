    include ./includes/header.jade
    .container
        .box
          hr
          include ./includes/nav.jade
          hr
          block content
    footer
      a.twitter-share-button(href="https://twitter.com/share?ref_src=twsrc%5Etfw" data-show-count="false" data-via="ItsJamesIRL") Tweet
      br
    script.
        var text = "\u00A9 " + new Date().getFullYear() + " James Earle";
        var elem = document.createElement("span");
        
        elem.textContent = text;

        var tags = document.getElementsByTagName("footer");
        tags[0].appendChild(elem);