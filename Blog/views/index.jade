extends layout

block content
    include ./includes/header.jade
    .blogs.box
        h3 Recent Posts
            ul
                each r, i in rows
                    // can do p(class="tag #{r.tag}") in the future
                    // consider a two column table of blog posts too?
                    p.tag.chrome
                    li
                        a(href="/posts/#{r.pid}")
                            span #{r.title}
